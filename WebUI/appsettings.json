{
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:seklo-db-server.database.windows.net,1433;Initial Catalog=seklo-db;Persist Security Info=False;User ID=seklowebadmin;Password=Cipele882!;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs.json",
          "fileSizeLimitBytes": 10485760, //10MB
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 5,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
